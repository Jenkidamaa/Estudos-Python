        "    self.lista_planos = ['Basico','Premiun']\n",
        "    if plano in self.lista_planos:\n",
        "      self.plano = plano\n",
        "    else:\n",
        "      raise Exception(\"Plano invalido\")\n",
        "    \n",
        "    def mudar_plano(self, nova_plano):\n",
        "      if novo_plano in self.lista_planos:\n",
        "        self.plano = novo_plano\n",
        "      else:\n",
        "        print(\"Plano invalido\")\n",
